<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="@dimen/dp60"
    android:orientation="vertical">

   <LinearLayout
       android:id="@+id/container_user_reply"
       android:layout_width="wrap_content"
       android:layout_alignParentEnd="true"
       android:orientation="vertical"
       android:padding="@dimen/dp3"
       android:background="@drawable/chat_bubble_user_background"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="12dp"
           android:src="@drawable/quote"
           android:layout_height="12dp"/>
       <TextView
           android:id="@+id/tv_message_user_oldMsg"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:gravity="center|start"
           android:text=""
           android:inputType="textMultiLine"
           android:lineSpacingExtra="@dimen/dp2"
           android:paddingStart="@dimen/dp10"
           android:paddingTop="@dimen/dp4"
           android:paddingEnd="@dimen/dp20"
           android:paddingBottom="@dimen/dp10"
           android:textAlignment="gravity"
           android:textColor="@color/black"
           android:textIsSelectable="true" />
       <TextView
           android:id="@+id/vT_user_reply_stamp"
           android:layout_width="match_parent"
           android:paddingEnd="12dp"
           android:gravity="center|end"
           android:textSize="@dimen/sp12"
           android:layout_height="wrap_content"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:paddingEnd="12dp"
           android:layout_height="wrap_content">
           <View
               android:layout_width="match_parent"
               android:background="@color/quantum_black_100"
               android:layout_height="1dp"/>
       </LinearLayout>
       <TextView
           android:id="@+id/tv_message_user_reply"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:gravity="center|start"
           android:text=""
           android:inputType="textMultiLine"
           android:lineSpacingExtra="@dimen/dp2"
           android:paddingStart="@dimen/dp10"
           android:paddingTop="@dimen/dp4"
           android:paddingEnd="@dimen/dp20"
           android:paddingBottom="@dimen/dp10"
           android:textAlignment="gravity"
           android:textColor="@color/black"
           android:textIsSelectable="true" />
   </LinearLayout>

</RelativeLayout>