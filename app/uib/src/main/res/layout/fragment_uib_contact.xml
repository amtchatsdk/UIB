<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vR_ContactsSelected"
        android:visibility="gone"
        android:padding="@dimen/dp4"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/vI_Liner"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp4"
        android:background="@color/grey"
        android:layout_below="@+id/vR_ContactsSelected"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/vT_Loading"
        android:hint="@string/loading_contacts"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/sp20"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/vI_Liner"
        android:id="@+id/vR_Contact"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


       <ImageView
           android:id="@+id/vI_Send_Contact"
           android:layout_width="wrap_content"
           android:layout_margin="@dimen/dp10"
           android:layout_alignParentEnd="true"
           android:visibility="gone"
           android:src="@drawable/send_contact"
           android:layout_alignParentBottom="true"
           android:layout_height="wrap_content"
           android:contentDescription="@string/send_contact" />


</RelativeLayout>